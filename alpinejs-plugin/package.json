{
  "name": "@livefir/fir",
  "version": "0.3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/livefir/fir"
  },
  "keywords": [
    "reactive",
    "view",
    "go",
    "alpinejs"
  ],
  "description": "Alpinejs plugin for Fir: Fir is a go toolkit to build reactive web interfaces using: Go, html/template and alpinejs.",
  "main": "dist/fir.cjs.js",
  "module": "dist/fir.esm.js",
  "unpkg": "dist/fir.min.js",
  "scripts": {
    "build": "node scripts/build.js",
    "watch": "node esbuild.config.mjs -w",
    "prepublish": "npm run build",
    "docs": "jsdoc2md src/*.js > api.md",
    "test": "jest"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-env": "^7.26.9",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.14.54",
    "esbuild-serve": "^1.0.1",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdoc-to-markdown": "^8.0.1"
  },
  "dependencies": {
    "@alpinejs/morph": "^3.13.5",
    "alpinejs": "^3.13.5"
  }
}
